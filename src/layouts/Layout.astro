---
import Header from "@/components/Header.astro";
import ThemeLoader from "@/components/ThemeLoader.astro";
import "@/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Brian Uribe" />
    <meta
      name="description"
      content="Fullstack developer and tech enthusiast. I love coding and learning new things. Discover my projects and get to know more"
    />
    <meta
      name="keywords"
      content="Brian Uribe, Brian, Uribe, brianuribe, brianuribe6, Programming, coding, Software Engineer, Learn Web Development, React, TypeScript"
    />
    <title>{title}</title>
    <ThemeLoader />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
